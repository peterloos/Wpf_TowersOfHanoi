<Window x:Class="TowerTestContainer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WpfTowerControl;assembly=WpfTowerControl"
        Title="HanoiTowerView: Test Container" Height="450" Width="525">
    <Canvas>
        <local:HanoiTowerView Name="TowerLeft"  Canvas.Top="10" Canvas.Left="20"></local:HanoiTowerView>
        
        <Button Name="ButtonTestPush" Canvas.Left="10" Canvas.Top="340" Width="80" Click="Button_Click">Test Push</Button>
        <Button Name="ButtonTestPop" Canvas.Left="10" Canvas.Top="370" Width="80"  Click="Button_Click">Test Pop</Button>

        <Button Name="ButtonTestPushAnimated" Canvas.Left="110" Canvas.Top="340" Width="120" Click="Button_Click">Test Push Animated</Button>
        <Button Name="ButtonTestPopAnimated" Canvas.Left="110" Canvas.Top="370" Width="120"  Click="Button_Click">Test Pop Animated</Button>

    </Canvas>
</Window>
